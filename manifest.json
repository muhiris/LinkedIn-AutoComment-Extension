{
  "manifest_version": 3,
  "name": "LinkedIn Comment Content Extractor",
  "version": "2.1",
  "description": "Extracts content when comment button is clicked",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
